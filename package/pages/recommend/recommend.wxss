}

.recommendContainer .header .headerImg{
  height: 300rpx;
  width: 100%;
}

.recommendContainer .header .headerDate{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  /* border: 1px solid red; */
  top: 0;
  left: 0;
  bottom: 0;
