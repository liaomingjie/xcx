/* 主要内容main */
.recommendContainer .main{
  position: relative;
  background-color: white;
  margin-top: -20rpx;
  border-radius: 30rpx;
  padding: 20rpx;
}

.recommendContainer .main .mainHeader{
  display: flex;
  justify-content: space-between;
}

.recommendContainer .main .mainScroll{
  height: calc(100vh - 382rpx);
  padding-top: 20rpx;
}

.recommendContainer .main .mainScroll .scrollItem{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.recommendContainer .main .mainScroll .scrollItem .songImg{
  width: 80rpx;
  height: 80rpx;
}

.recommendContainer .main .mainScroll .scrollItem .song{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  font-size: 28rpx;
}







