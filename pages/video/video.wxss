.videoContainer{
  height: 100%;
}

/* header头部 */
.videoContainer .header{
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 10rpx;
}

.videoContainer .header image{
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search{
  height: 64rpx;
  box-sizing: border-box;
  flex:1; /* flex-grow: 1; */
  border: 1rpx solid #aaa;
  text-align: center;
  line-height: 64rpx;
  color: red;
  font-size: 28rpx;
  margin: 0 20rpx;
}
/* nav导航 */
.videoContainer .navScroll{
  height: 60rpx;
  display: flex;
  padding-left: 20rpx;
}

.videoContainer .navScroll .navItem{
  font-size: 28rpx;
  box-sizing: border-box;
  line-height: 60rpx;
  margin-right: 50rpx;
  flex-shrink: 0;
}

.videoContainer .navScroll .navItem.active{
  border-bottom: 1rpx solid red;
}

/* 视频video */

.videoContainer .videoScroll{
  /* 设置视频区域的高度 */
  /* 减多了可以但是减少了会出问题
  减多不能减太多，减太多下面出现空白 */
  height: calc(100vh - 150rpx);
  padding-top: 10rpx;
}

.videoContainer .videoScroll .videoItem{
  padding: 0 20rpx;
}

.videoContainer .videoScroll .videoItem .video{
  width: 100%;
  height: 360rpx;
  border-radius: 30rpx;
}

.videoContainer .videoScroll .videoItem .videoImg{
  width: 100%;
  height: 360rpx;
  border-radius: 30rpx;
}

.videoScroll .videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.footer .comments_praised {
  float: right;
}
.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}
.comments_praised .btn:after {
  border: none;
}
.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}
.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}



