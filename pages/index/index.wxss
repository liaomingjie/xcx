/* 轮播图样式 */
.indexContainer .bannerSwiper .swiperItem .swiperImg{
  width: 100%;
  height: 300rpx;
}


/* nav导航样式 */
.indexContainer .navList{
  display: flex;
  justify-content: space-around;
}

.indexContainer .navList .navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.indexContainer .navList .navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  background-color: red;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: white;
  font-size: 50rpx;
  margin: 20rpx 0;
}

.indexContainer .navList .navItem .navText{
  font-size: 28rpx;
}

/* 推荐歌曲样式 */
.indexContainer .recommend{
  padding: 20rpx;
}



/* 使用scrollview的时候
1、一定要设置高度
2、内部本身不能使用flex，要想使用必须开启flex开关 enable-flex
3、使用的时候要规定方向 水平就要设置flex-x 垂直要设置flex-y */

.indexContainer .recommend .scroll{
  display: flex;
  height: 300rpx;
}

.indexContainer .recommend .scroll .scrollItem{
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
}

.indexContainer .recommend .scroll .scrollItem .itemImg{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}

.indexContainer .recommend .scroll .scrollItem .itemText{
  font-size: 28rpx;
  width: 200rpx;
  /* 单行文本溢出出现省略 */
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出出现省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;   /** 多行文本溢出...*/
  overflow: hidden;
}


/* 排行榜样式 */
.indexContainer .rank{
  padding: 20rpx;
}

.indexContainer .rank .rankSwiper{
  height: 400rpx;
}

.indexContainer .rank .rankSwiper .swiperItem{
  height: 400rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main{
  width: 90%;
  height: 400rpx;
  background-color: #aaa;
  margin: 0 auto;
  padding: 20rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .mainTitle{
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .song{
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .song .songImg{
  width: 100rpx;
  height: 100rpx;
}

.indexContainer .rank .rankSwiper .swiperItem .main .songList .song .count{
  margin: 0 50rpx;
}








